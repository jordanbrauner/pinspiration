= form_for @board do |f|
  - if @board.errors.any?
    #error_explanation
      %h4
        = pluralize @board.errors.count, 'error'
        prohibited this board from being saved
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg
  .board_form
    = f.label :title
    = f.text_field :title
    = f.submit
