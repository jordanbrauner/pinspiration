<!DOCTYPE html>
<html>
<head>
  <title>Pinspiration</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <h1><%=link_to "Pinspiration", pins_path%></h1>
    <nav>
      <% if current_user %>
        <%= link_to "New Pin", new_pin_path %>
        <%= link_to 'Signout', destroy_user_session_path, :method => :delete, id: "signout" %>
      <% else %>
        <%= link_to 'Signup', new_user_registration_path, id: "signup" %>
        <%= link_to 'Login', new_user_session_path, id: "login" %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
